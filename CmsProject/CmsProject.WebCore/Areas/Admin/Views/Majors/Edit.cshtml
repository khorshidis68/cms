@model CmsProject.DomainClass.Major.Major

@{
    ViewData["Title"] = "ویرایش رشته تحصیلی";
}

<h2>ویرایش</h2>

<h4>رشته تحصیلی</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                
            <div class="form-group">
                <label asp-for="GradeTitle" class="control-label"></label>
                <select asp-for="GradeId" asp-items="@ViewBag.Gradelist" class="form-control"></select>
                <span asp-validation-for="GradeTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>
            </div>
        </form>
    </div>
</div>