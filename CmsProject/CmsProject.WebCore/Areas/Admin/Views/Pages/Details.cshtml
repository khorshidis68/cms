@using CmsProject.Utilities.Convertor
@model CmsProject.DomainModelClass.Page.Page

@{
    ViewData["Title"] = "جزئیات خبر";
}

    <h2>جزئیات</h2>

<div>
    <h4>خبر</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PageTitle)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PageTitle)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd>
            <textarea asp-for="ShortDescription" disabled="disabled" class="form-control"></textarea>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PageText)
        </dt>
        <dd>
            <textarea asp-for="PageText" disabled="disabled" class="form-control" rows="5"></textarea>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PageVisit)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PageVisit)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd>
            @if (Model.ImageName != null)
            {
                <img id="ImageName" src="~/PageImages/@Model.ImageName" class="thumbnail" width="125" height="125" />
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PageTags)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PageTags)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ShowInSlider)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ShowInSlider)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd>
            @Model.CreateDate.ToShamsi()
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PageGroup)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PageGroup.GroupTitle)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">ویرایش</a>
    <a asp-action="Index" class="btn btn-info">بازگشت به لیست گروه خبر</a>
</div>
