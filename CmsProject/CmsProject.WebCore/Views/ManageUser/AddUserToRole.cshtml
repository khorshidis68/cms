@model AddUserToRoleViewModel
@{
    ViewData["Title"] = "افزودن گروه به کاربر";
}
<h2>افزودن گروه به کاربر</h2>
@if (!Model.UserRoles.Any())
{
    <h1>هیچ گروهی یافت نشد</h1>
}
else
{
<form asp-controller="ManageUser" asp-action="AddUserToRole" method="post">
    <div class="bg-info" asp-validation-summary="ModelOnly"></div>
    <br />

    @for (int i = 0; i < Model.UserRoles.Count; i++)
    {
        <div class="form-group">
            <input asp-for="@Model.UserRoles[i].IsSelected" />
            <label>@Model.UserRoles[i].RoleName</label>

            <input type="hidden" asp-for="@Model.UserRoles[i].RoleName" />
        </div>
    }
    <input type="hidden" asp-for="@Model.UserId" />
    <button class="btn btn-success" type="submit">ثبت</button>
    <a asp-action="Index" class="btn btn-info">بازگشت به لیست کاربران</a>
</form>
}